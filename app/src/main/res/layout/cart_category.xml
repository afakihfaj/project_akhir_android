            android:layout_height="wrap_content"
            android:text=":"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Category"
